# Docker Environment Configuration Template
# Copy this file to .env.docker and customize before running

# Application
APP_NAME="Secure Game Topup"
APP_ENV=local
APP_KEY=  # Will be generated by setup script
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel_topup
DB_USERNAME=laravel_user
DB_PASSWORD=CHANGE_THIS_PASSWORD_123!
DB_ROOT_PASSWORD=CHANGE_ROOT_PASSWORD_456!

# Session
SESSION_DRIVER=database

# Mail (for password reset testing)
MAIL_MAILER=log

# Security Notice:
# - Never commit .env.docker with real passwords
# - Change all passwords before running
# - APP_KEY will be generated during setup
