# Application Settings
APP_NAME="UP STORE"
APP_ENV=local
APP_KEY=base64:GENERATE_THIS_WITH_php_artisan_key:generate
APP_DEBUG=true
APP_URL=http://localhost:8000

# Build Target (development or production)
BUILD_TARGET=development

# Application Port
APP_PORT=8000

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel_topup
DB_USERNAME=laravel_user
DB_PASSWORD=secure_password_change_in_production
DB_ROOT_PASSWORD=root_password_change_in_production

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache & Session Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis

# Broadcasting
BROADCAST_CONNECTION=log

# Filesystem
FILESYSTEM_DISK=local

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Mail Configuration (configure for production)
MAIL_MAILER=log
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@upstore.local"
MAIL_FROM_NAME="${APP_NAME}"

# Security Settings (IMPORTANT: Change in production!)
# Generate with: openssl rand -hex 32
JWT_SECRET=

# Two-Factor Authentication
GOOGLE2FA_ENABLED=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# IMPORTANT PRODUCTION NOTES:
# 1. Set APP_ENV=production
# 2. Set APP_DEBUG=false
# 3. Change all passwords (DB_PASSWORD, DB_ROOT_PASSWORD)
# 4. Generate new APP_KEY with: docker-compose exec app php artisan key:generate
# 5. Set proper APP_URL to your domain
# 6. Configure real MAIL settings
# 7. Enable HTTPS and set SESSION_SECURE_COOKIE=true